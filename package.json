{
  "name": "fruit-veggie",
  "version": "1.0.0",
  "description": "calculator program",
  "main": "main.js",
  "dependencies": {
    "bootstrap": "^4.6.0",
    "electron-reload": "^1.5.0",
    "electron-store": "^8.0.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-config-prettier": "^8.3.0",
    "install-peerdeps": "^3.0.3",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "start": "electron .",
    "deploy": "electron-builder --windows nsis:x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/develop-now/fruit-veggie.git"
  },
  "author": "jieun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/develop-now/fruit-veggie/issues"
  },
  "homepage": "https://github.com/develop-now/fruit-veggie#readme",
  "build": {
    "productName": "FruitAndVeggie",
    "appId": "com.electron.calculator",
    "asar": true,
    "protocols": {
      "name": "fruitandveggie",
      "schemes": [
        "fruitandveggie"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/Icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
